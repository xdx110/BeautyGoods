<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/goods_head_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/aa" />

    <LinearLayout
        android:id="@+id/goods_text_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_head_image"
        android:layout_centerInParent="true"
        android:layout_marginTop="-60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/goods_head_text_show"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#000000"
            android:gravity="center"
            android:padding="5dp"
            android:text="Mansur Gavriel 斜跨马鞍包"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/goods_end_text_show"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="#000000"
            android:gravity="center"
            android:padding="5dp"
            android:text="粉色蔷薇色,浪漫少女心"
            android:textColor="#ffffff" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/goods_author_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_text_show"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/goods_author_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/aa" />

        <TextView
            android:maxEms="25"
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/goods_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/goods_author_image"
            android:text="Floriana Gavriel"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/goods_author_designer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/goods_author_name"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/goods_author_image"
            android:text="Floriana Gavriel"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/goods_author_show"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/goods_bad_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_bad_select" />

        <ImageView
            android:layout_marginTop="8dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/shugang" />

        <ImageView
            android:id="@+id/goods_good_image"
            android:layout_marginRight="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_good_select" />
    </LinearLayout>
</RelativeLayout>